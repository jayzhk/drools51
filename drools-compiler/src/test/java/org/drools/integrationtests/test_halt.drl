package org.com.agfa.hap.drools;

global java.util.List results;

rule "fire"
when
    $old : Number( $val : intValue )
then
    results.add( $old );
    insert( new Integer( $val + 1 ) );
    retract( $old );
end

rule "stop"
	salience 10
when
	Number( intValue == 10 )
then
    com.agfa.hap.drools.halt();
end